<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE webmerge PUBLIC "//WebMerge/WebMerge Configuration 1.1/EN" "webmerge.dtd">

<webmerge>

	<order>
		<resource name="software"/>
		<resource name="download"/>
		<resource name="documents"/>
		<resource name="developers"/>
		<resource name="support.html"/>
		<resource name="search.html"/>
	</order>

	<exemptions>
		<exemption pattern="images" actions="menu"/>
		<exemption pattern="copyright.html" actions="menu"/>
		<exemption pattern="results.html" actions="menu"/>
		<exemption pattern="upgrade.html" actions="menu merge"/>
		<exemption pattern="menu.jsp" actions="menu merge copy"/>
		<exemption pattern="info.jsp" actions="menu merge copy"/>
		<exemption pattern="news.jsp" actions="menu merge copy"/>
		<exemption pattern="*.jsp" actions="menu copy"/>
		<exemption pattern="*.jnlp" actions="menu merge"/>
		<exemption pattern="*.css" actions="menu merge"/>
		<exemption pattern="*.js" actions="menu merge"/>
	</exemptions>
	
	<!-- 
	The following keys are reserved for internal use by WebMerge. If you specify 
	values for these keys here they will be overridden:
	
	head - The head information of the requested page.
	body - The body information of the requested page.
	menu - The generated menu.
	
	The following keys are for special use by WebMerge. Use these keys to change
	the default behavior:
	
	menu-base - The base menu to use on all pages.
	menu-width - The width of the menu table. (default: 200px );
	menu-table-style - The value of the style attribute for the menu table tags.
	menu-td-style - The value of the style attribute for the menu td tags.
	menu-head-anchor-class - The stylesheet class for menu head anchors.
	menu-item-anchor-class - The stylesheet class for menu item anchors.
	-->
	<template path="template.html">
		<parameter key="menu-base" path="menu.jsp"/>
		<parameter key="header" path="header.jsp"/>
		<parameter key="footer" path="footer.jsp"/>
		<parameter key="news" path="news.jsp"/>
		<parameter key="info" path="info.jsp"/>

		<parameter key="menu-width" value="200px"/>
		<parameter key="menu-show-with-base" value="false"/>
		<parameter key="menu-head-anchor-class" value="menuhead"/>
		<parameter key="menu-item-anchor-class" value="menuitem"/>
	</template>

</webmerge>
