<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<display-name>Parallel Symmetry</display-name>

	<servlet>
		<servlet-name>stylesheet</servlet-name>
		<servlet-class>com.parallelsymmetry.site.StyleSheet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>download</servlet-name>
		<servlet-class>com.parallelsymmetry.site.Download</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>stylesheet</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>download</servlet-name>
		<url-pattern>/download/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>terrace</filter-name>
		<filter-class>com.parallelsymmetry.terrace.servlet.ServletProcessor
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>terrace</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>terrace</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>

